{
  "manifest_version": 3,
  "name": "Border Animation",
  "version": "1.0",
  "description": "Adds animated borders on hover",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "commands"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "./src/pages/popup/popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "options_page": "./src/pages/options/options.html"
}
